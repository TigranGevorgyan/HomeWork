<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taron.homework.MainActivity">

    <RelativeLayout
        android:id="@+id/activity_relLay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:onClick="onClick">

        <TextView
            android:id="@+id/activity_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/fullname"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/activity_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_tv1"
            android:layout_centerInParent="true"
            android:text="@string/john_smith"
            android:textColor="@color/white"
            android:textSize="25sp"
            />

        <TextView
            android:id="@+id/acticity_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="@string/m"
            android:textColor="@color/white"
            android:textSize="40sp"
            tools:ignore="RelativeOverlap" />


        <TextView
            android:id="@+id/acticity_tv4"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/acticity_tv3"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/activity_relLay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/acticity_tv4"
            android:background="@color/colorAccent"
            >

            <TextView
                android:id="@+id/acticity_tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/fullname"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/acticity_tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/acticity_tv5"
                android:layout_centerHorizontal="true"
                android:text="@string/sarah_jonson"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/acticity_tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:text="@string/f"
                android:textColor="@color/white"
                android:textSize="40sp"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>


    </RelativeLayout>



</LinearLayout>
